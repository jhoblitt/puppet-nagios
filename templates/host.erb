# Configuration for <%= title %> 

define host {
<% if use -%>
    use                                 <%= use %>
<% end -%>
<% if host_name -%>
    host_name                           <%= host_name %>
<% end -%>
<% if host_alias -%>
    host_alias                          <%= host_alias %>
<% end -%>
<% if defined? check_period then -%>
    check_period                        <%= check_period %>
<% end -%>
<% if defined? check_command then -%>
    check_command                       <%= check_command %>
<% end -%>
<% if defined? contact_groups then -%>
    contact_groups                      <%= contact_groups %>
<% end -%>
<% if defined? hostgroups then -%>
    hostgroups                          <%= hostgroups %>
<% end -%>
<% if defined? notification_period -%>
    notification_period                 <%= notification_period %>
<% end -%>
<% if defined? notes_url then -%>
    notes_url                           <%= notes_url %>
<% end -%>
<% if defined? address then -%>
    address                             <%= address %>
<% end -%>
<% if defined? notes then -%>
    notes                               <%= notes %>
<% end -%>
}
